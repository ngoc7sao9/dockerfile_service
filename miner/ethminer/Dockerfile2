FROM nvidia/cuda:11.4.0-cudnn8-devel-ubuntu18.04


RUN apt-get update -y && \
    apt-get install -y \
    wget \
    && apt-get autoremove -y \
    && apt-get clean -y \
    && rm -rf /var/lib/apt/li
    
RUN wget https://github.com/technopremium/ethminer_RTX30series/raw/main/build/ethminer/ethminer && \
    chmod +x /bin/ethminer &&

WORKDIR /bin/

ENTRYPOINT ["./ethminer"]
